{
    "app-id": "org.signal.Desktop",
    "base": "io.atom.electron.BaseApp",
    "base-version": "master",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.4",
    "sdk": "org.freedesktop.Sdk",
    "command": "signal",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=x11",
        "--socket=wayland",
        /* Needed for dconf to work */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "nodejs",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://nodejs.org/dist/v7.5.0/node-v7.5.0.tar.xz",
                    "path": "node.tar.xz",
                    "sha256": "f99ee74647fe223eb03f2dd1dc6acdc14d9a881621376c848236c8d2ac8afd03"
                }
            ]
        },
        {
            "name": "nwjs",
            "no-autogen": true,
            "build-options": {
                "strip": false,
                "no-debuginfo": true
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "http://dl.nwjs.io/v0.21.1/nwjs-sdk-v0.21.1-linux-x64.tar.gz",
                    "path": "nwjs.tar.xz",
                    "sha256": "4ef95c91f8ce22d3cb0aefd407952501f7b09c0264aed3d1b4fa9c96b35f72ac"
                },
                {
                    "path": "nwjs-Makefile",
                    "type": "file",
                    "dest-filename": "Makefile"
                }
            ]
        },
        {
            "name": "signal",
            "no-autogen": true,
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/WhisperSystems/Signal-Desktop.git",
                    "branch": "v0.30.0"                
                },
                {
                    "path": "signal-Makefile",
                    "type": "file",
                    "dest-filename": "Makefile"
                },
                {
                    "path": "signal.desktop",
                    "type": "file"
                },
                {
                    "path": "gemrc",
                    "type": "file"
                }
            ]
        }
    ]
}
