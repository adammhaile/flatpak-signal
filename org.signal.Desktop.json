{
    "app-id": "org.signal.Desktop",
    "base": "io.atom.electron.BaseApp",
    "base-version": "lts",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "signal-desktop-beta",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Flatpak) ",
    "rename-desktop-file": "signal-desktop-beta.desktop",
    "rename-icon": "signal-desktop-beta",
    "separate-locales": false,
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
      {
          "name": "signal",
          "buildsystem": "simple",
          "build-commands": [
            "ar x signal.deb",
            "tar xvf data.tar.xz",
            "mkdir -p /app/share/signal",
            "cp -rvf ./opt/Signal\\ Beta/* /app/share/signal",
            "cp -rvf ./usr/* /app",
            "install -Dm744 signal-desktop-beta /app/bin",
            "desktop-file-edit --set-icon=org.signal.Desktop /app/share/applications/signal-desktop-beta.desktop",
            "desktop-file-edit --set-key=Exec --set-value='/app/bin/signal-desktop-beta %F' /app/share/applications/signal-desktop-beta.desktop"
          ],
          "sources": [
            {
              "type": "file",
              "url": "https://updates.signal.org/desktop/apt/pool/main/s/signal-desktop-beta/signal-desktop-beta_1.0.35-beta.1_amd64.deb",
              "sha256": "e2a0ec96092c96cf9e7e19ed750562710b5129641b6f0d3a49bdf058fdc47aeb",
              "dest-filename": "signal.deb"
            },
            {
                "type": "script",
                "dest-filename": "signal-desktop-beta",
                "commands": [
                  "exec /app/share/signal/signal-desktop-beta \"$@\""
                ]
            }
          ],
          "modules": [
            {
                "name": "libsecret",
                "config-opts": [
                    "--disable-manpages",
                    "--disable-gtk-doc",
                    "--disable-static",
                    "--disable-introspection"
                ],
                "cleanup": [
                    "/bin",
                    "/include",
                    "/lib/pkgconfig",
                    "/share/gtk-doc",
                    "*.la"
                ],
                "sources": [
                    {
                        "type": "archive",
                        "url": "http://ftp.gnome.org/pub/GNOME/sources/libsecret/0.18/libsecret-0.18.5.tar.xz",
                        "sha256": "9ce7bd8dd5831f2786c935d82638ac428fa085057cc6780aba0e39375887ccb3"
                    },
                    {
                        "type": "shell",
                        "commands": ["autoreconf -f"]
                    }
                ]
            },
            {
              "name": "xkbfile",
              "cleanup": ["/include", "/lib/*.la", "/lib/pkgconfig"],
              "config-opts": ["--disable-static"],
              "sources": [
                {
                  "type": "archive",
                  "url": "https://www.x.org/releases/individual/lib/libxkbfile-1.0.9.tar.bz2",
                  "sha256": "51817e0530961975d9513b773960b4edd275f7d5c72293d5a151ed4f42aeb16a"
                }
              ]
            }
          ]
      }
  ]
}
